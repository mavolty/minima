section.menu
  ul.menu__list
    each item in navigation.list
      li.menu__item(data-item=item.text.toLowerCase())
        .menu__path
          a.menu__link(href=Link(item.link))
            span.menu__front= item.text
            span.menu__back= item.text
  .menu__info
    .menu__contact
      p.menu__address= contact.address
      p.menu__email= contact.email
    .menu__social
